#include<stdio.h>
void countEvenOdd(int *arr,int n ,int *evencount , int *oddcount)
{
    *evencount=0;
    *oddcount=0;
    int *ptr=arr;
    while(ptr<arr+n)
    {
        if(*ptr%2==0)
        {
            (*evencount)++;
        }
        else
        {
            (*oddcount)++;
        }
        ptr++;
    }
}
int main()
{
    int numbers[6];
    printf("Enter 6 numbers: ");
    for (int i = 0; i < 6; i++)
        scanf("%d", &numbers[i]);

    int even, odd;
    countEvenOdd(numbers, 6, &even, &odd);

    printf("Even numbers: %d\n", even);
    printf("Odd numbers: %d\n", odd);

    return 0;
}
